<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/student_last_name_id"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Durand"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/student_first_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/student_last_name_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="Jean-FranÃ§ois"
        />

    <ImageView
        android:id="@+id/very_bad_id"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_very_bad"
        android:layout_marginTop="64dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bad_id"
        app:layout_constraintTop_toBottomOf="@id/student_first_name_id"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:contentDescription="@string/very_bad_desc"/>

    <ImageView
        android:id="@+id/bad_id"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_bad"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toEndOf="@id/very_bad_id"
        app:layout_constraintEnd_toStartOf="@+id/good_id"
        app:layout_constraintTop_toBottomOf="@id/student_first_name_id"
        android:contentDescription="@string/bad_desc"/>
    <ImageView
        android:id="@+id/good_id"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_good"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toEndOf="@id/bad_id"
        app:layout_constraintEnd_toStartOf="@+id/very_good_id"
        app:layout_constraintTop_toBottomOf="@id/student_first_name_id"
        android:contentDescription="@string/good_dec"/>
    <ImageView
        android:id="@+id/very_good_id"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_very_good"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/good_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_first_name_id"
        android:contentDescription="@string/very_good_desc"/>
</android.support.constraint.ConstraintLayout>