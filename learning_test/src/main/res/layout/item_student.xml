<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="8dp"
    >

    <ImageView
        android:id="@+id/student_icon_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person"
        android:tint="@color/colorSecondaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/student_icon_desc"/>

    <TextView
        android:id="@+id/student_last_name_id"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Durand"
        app:layout_constraintBottom_toTopOf="@id/student_first_name_id"
        app:layout_constraintStart_toEndOf="@id/student_icon_id"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/student_first_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jean-FranÃ§ois"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/student_last_name_id"
        app:layout_constraintTop_toBottomOf="@id/student_last_name_id"
        />

    <ImageView
        android:id="@+id/student_score_last1_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bad"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/student_score_last2_id"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/student_score_last2_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_good"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/student_score_last3_id"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/student_score_last3_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_very_good"
        android:alpha="0.7"
        android:layout_marginEnd="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/student_global_score_id"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-thin"
        android:padding="8dp"
        android:text="15"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</android.support.constraint.ConstraintLayout>